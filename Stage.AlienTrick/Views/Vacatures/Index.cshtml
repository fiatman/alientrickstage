@model IEnumerable<Vacature>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<br />
<p>
    <a class="FontAwesomeButton" href="@Url.Action("Create", "Vacatures", null)"><i class="far fa-plus-square"></i> Nieuwe Vacature</a>
</p>

<form asp-controller="Vacatures" asp-action="Index" class="form-inline">
    <p>
        <input class="form-control" type="text" placeholder="Naam" name="SearchString"> <input class="btn btn-default" type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            Naam
        </th>
        <th>
            Aantal Uur
        </th>
        <th>
            Aantal Studenten
        </th>
        <th>
            Stage Beschrijving
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StageTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountofHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountofStudents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StageDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        </td>
        <td>
            @Html.ActionLink("Solliciteer op deze vacature", "Applyforjob", new { vcid = item.ID }) |
        </td>
    </tr>
    }

</table>