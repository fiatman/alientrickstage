@model IEnumerable<Student>
@{
    ViewBag.Title = "Index";
}
<head>
    <script src="https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js"></script>

    <script>
        ScrollReveal.debug = true;
    </script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<h2>Studenten</h2>

<br />
<p>
    <a class="FontAwesomeButton" href="@Url.Action("Create", "Studenten", null)"><i class="fas fa-user-plus"></i> Nieuwe Student</a>
</p>
@Html.Raw(TempData["msg"])
<form asp-controller="Studenten" asp-action="Index" class="form-inline">
    <p>
        <input class="form-control" type="text" placeholder="Achternaam" name="SearchString"> <input class="btn btn-default" type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            Voornaam
        </th>
        <th>
            Achternaam
        </th>
        <th>
            Leeftijd
        </th>
        <th>
            Woonplaats
        </th>
        <th>
            School
        </th>
        <th>
            Nationaliteit
        </th>
        <th>
            Studentnummer
        </th>
        <th>
            Stagevergoeding
        </th>
        <th>
            Opmerkingen
        </th>
        <th></th>
    </tr>

    @if (Model == null)
    {
        <text>Geen studenten geselecteerd</text>
    }
    else
    {

        foreach (var student in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(m => student.Firstname)
        </td>
        <td>
            @Html.DisplayFor(m => student.Lastname)
        </td>
        <td>
            @Html.DisplayFor(m => student.Age)
        </td>
        <td>
            @Html.DisplayFor(m => student.City)
        </td>
        <td>
            @Html.DisplayFor(m => student.School)
        </td>
        <td>
            @Html.DisplayFor(m => student.Nationality)
        </td>
        <td>
            @Html.DisplayFor(m => student.Studentnumber)
        </td>
        <td>
            @Html.DisplayFor(m => student.Compensation)
        </td>
        <td>
            @Html.DisplayFor(m => student.Description)
        </td>
        <td>
           <a href="@Url.Action("Edit", "Studenten", new { id = student.ID })"><i class="fas fa-user-edit fa-2x"></i></a>
        </td>
        <td>
           <a href="@Url.Action("AcceptHours", "Studenten", new { id = student.ID })"> <i class="fas fa-user-check fa-2x"></i> </a>
        </td>
        <td>
           <a href="@Url.Action("GetProgress", "Studenten", new { id = student.ID , AmountOfHourstoComplete = student.AmountOfhoursToComplete , AmountofbookedHours = student.AmountofbookedHours})"><i class="fas fa-user-clock fa-2x"></i></a>
        </td>
        <td>
           <a href="@Url.Action("CreateMeeting", "Studenten", new { id = student.ID }, null)"><i class="fas fa-calendar-plus fa-2x"></i></a>
        </td>
        <td>
           <a href="@Url.Action("MeetingCompleted", "Studenten", new { id = student.ID }, null)"><i class="fas fa-check fa-2x"></i></a>
        </td>
        <td>
          <a href="@Url.Action("MeetingCompleted", "Studenten", new { id = student.ID }, null)"><i class="fas fa-check-double fa-2x"></i></a>
        </td>

    </tr>
        }
    }
</table>
<style>
    body{
        background-image: url(../../Content/Images/image.png);
        color: white;
    }
    .table {
        background-image: linear-gradient(to bottom right, #f58220, #ed1165);
        opacity: 0.7;
        border-radius: 8px;
        padding: 10px;
        text-align: center;
    }
</style>
<script>
    ScrollReveal().reveal('.table', { delay: 70, distance: '20px', cleanup: true });
</script>