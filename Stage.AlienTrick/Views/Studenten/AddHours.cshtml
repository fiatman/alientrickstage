@model global::Stage.AlienTrick.Models.Voortgangsmodel
@{
    ViewBag.Title = "AddHours";
}
@Html.Raw(TempData["msg"])
<h2>Voeg Uren toe</h2>


<h3>op dit moment zijn er @Model.AmountofbookedHours uren gedraaid door de stagiaire</h3>

@using (Html.BeginForm("AddHours", "Studenten", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.student.ID)
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="@Model.ProgressPercentage" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.AmountofbookedHours, "Gedraaide uren toevoegen", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AmountofbookedHours, new { htmlAttributes = new { @class = "form-control", min = "1" } })
            @Html.ValidationMessageFor(model => model.AmountofbookedHours, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}