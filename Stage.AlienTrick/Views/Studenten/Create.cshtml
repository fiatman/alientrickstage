@model Student
@{
    ViewBag.Title = "Create";
}
<script src="https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js"></script>

<script>
        ScrollReveal.debug = true;
</script>
<h2>Create</h2>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Nieuwe Student Aanmaken</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="formsleft">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control", placeholder = "Voornaam" } })
                    @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control", placeholder = "Achternaam" } })
                    @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", placeholder = "Leeftijd" } })
                    @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "Woonplaats" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nationality, new { htmlAttributes = new { @class = "form-control", placeholder = "Nationaliteit" } })
                    @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="formright">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Studentnumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Studentnummer" } })
                    @Html.ValidationMessageFor(model => model.Studentnumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.School, new { htmlAttributes = new { @class = "form-control", placeholder = "School" } })
                    @Html.ValidationMessageFor(model => model.School, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Compensation, new { htmlAttributes = new { @class = "form-control", placeholder = "Stagevergoeding" } })
                    @Html.ValidationMessageFor(model => model.Compensation, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Opmerkingen" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AmountOfhoursToComplete, new { htmlAttributes = new { @class = "form-control", placeholder = "Aantal stage-uren" } })
                    @Html.ValidationMessageFor(model => model.AmountOfhoursToComplete, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="knopje">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
}



<div class="linkje">
    @Html.ActionLink("Back to List", "Index")
</div>

<style>
    body {
        background-image: url(../../Content/Images/image.png);
        color: white;
    }

    .formright {
        max-height: 100%;
        float: right;
        background-image: linear-gradient(to top left, #00aeef, #00ad8e);
        padding-left: 35px;
        padding-top: 35px;
        padding-bottom: 35px;
        border-radius: 8px;
        opacity: 0.7;
        margin-right: 100px;
    }

    .formsleft {
        float: left;
        background-image: linear-gradient(to top left, #00aeef, #00ad8e);
        padding-left: 35px;
        padding-top: 35px;
        padding-bottom: 35px;
        border-radius: 8px;
        opacity: 0.7;
        margin-left: 100px;
    }

    .form-horizontal {
        margin-top: 70px;
    }

    .knopje {
        margin-top: 500px;
        position: center;
    }
</style>
<script>
    ScrollReveal().reveal('.form-horizontal ', { delay: 70, distance: '20px', cleanup: true });
    ScrollReveal().reveal('.knopje ', { delay: 70, distance: '20px', cleanup: true });
    ScrollReveal().reveal('.linkje ', { delay: 70, distance: '20px', cleanup: true });
</script>