    .button {
        border: none;
        background-image: linear-gradient(to bottom right, #f58220, #ed1165);
        position: relative;
        color: white;
        padding: 15px 32px;
        text-align: center;
        font-size: 16px;
        margin: 0 auto;
        display: flex;
        justify-content: center;
    }




    body {
        background-image: url(../../Content/Images/image.png);
        background-repeat: no-repeat;
        background-position-x: center;
    }


</style>
<script>
    jQuery("#buttonvacature").click(function () {
        jQuery('html, body').animate({
            scrollTop: $("#columns").offset().top
        }, 2000);
    });

    jQuery(document).ready(function () {
        jQuery("#navbarid").hide();
    });

    jQuery(".solicitatieknopje").click(function () {

        $('.form-vacature-id').val($(this).attr('data-value'));
        console.log('Vacature ID geladen in form', $('.form-vacature-id').val());

        //console.log(jQuery(this).data("value"));
    });


    jQuery(".solicitatieknopje").click(function () {
        jQuery("#solliciteren").show();
        jQuery('html, body').animate({
            scrollTop: $("#solliciteren").offset().top
        }, 2000);
        console.log($("#solliciteren").offset());
    });

    ScrollReveal().reveal('.col-text', { delay: 70, distance: '20px', cleanup: true });
    ScrollReveal().reveal('.foto1', { delay: 70, distance: '20px', cleanup: true});
    ScrollReveal().reveal('.foto2', { delay: 70, distance: '20px', cleanup: true });
    ScrollReveal().reveal('.foto3', { delay: 70, distance: '20px', cleanup: true});
    ScrollReveal().reveal('.belangrijk', { delay: 70, distance: '20px', cleanup: true});
    ScrollReveal().reveal('.col-text2', { delay: 70, distance: '20px', cleanup: true});
    ScrollReveal().reveal('.tekstje', { delay: 70, distance: '20px', cleanup: true});
    ScrollReveal().reveal('.tekstje', { delay: 70, distance: '20px', cleanup: true});
    ScrollReveal().reveal('.columns', { delay: 70, distance: '20px', cleanup: true }); 
    ScrollReveal().reveal('.button', { delay: 70, distance: '20px', cleanup: true });
    ScrollReveal().reveal('.center-block', { delay: 70, distance: '20px', cleanup: true });
</script>

